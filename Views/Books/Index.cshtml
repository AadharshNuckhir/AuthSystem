@model IEnumerable<AuthSystem.Areas.Identity.Data.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">Create New Book</a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Author Id
                </th>
                <th>
                    Genre Id
                </th>
                <th>
                    Publisher Id
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Title
                    </td>
                    <td width="20%">
                        @obj.Price
                    </td>
                    <td width="10%">
                        @obj.AuthorId
                    </td>
                    <td width="10%">
                        @obj.GenreId
                    </td>
                    <td width="10%">
                        @obj.PublisherId
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Books" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-2-square"></i>Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-cart2"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

