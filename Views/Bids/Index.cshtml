@model IEnumerable<AuthSystem.Areas.Identity.Data.Bid>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Bid List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Bids" asp-action="Create" class="btn btn-primary">Create New Bid</a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Book Name
                </th>
                <th>
                    Publisher Name
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Book.Title
                    </td>
                    <td width="40%">
                        @($"{obj.Publisher.FirstName} {obj.Publisher.LastName}")
                    </td>
                    <td width="30%">
                        @obj.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
