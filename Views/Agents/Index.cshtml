@model IEnumerable<AuthSystem.Areas.Identity.Data.Agent>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Agent List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Agents" asp-action="Create" class="btn btn-primary">Create New Agent</a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>  
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Agency Name
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%">
                        @obj.FirstName
                    </td>
                    <td width="15%">
                        @obj.LastName
                    </td>
                    <td width="10%">
                        @obj.AgencyName
                    </td>
                    <td width="40%">
                        @obj.Email
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Agents" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-2-square"></i>Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Agents" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-cart2"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
